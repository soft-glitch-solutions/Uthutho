{
  "expo": {
    "name": "Uthutho",
    "slug": "uthutho",
    "version": "1.5.2",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "uthutho",
    "platforms": ["ios", "android", "web"],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSUserTrackingUsageDescription": "This identifier will be used to deliver personalized ads to you.",
        "SKAdNetworkItems": [
          {
            "SKAdNetworkIdentifier": "cstr6suwn9.skadnetwork"
          }
        ],
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["uthutho"]
          }
        ],
        "LSApplicationQueriesSchemes": ["https", "uthutho"]
      },
      "bundleIdentifier": "com.softglitch.uthutho"
    },
    
    "android": {
      "package": "com.softglitch.uthutho",
      "versionCode": 39,
      "googleServicesFile": "./google-services.json", 
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#000000"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "uthutho",
              "host": "*"
            },
            {
              "scheme": "uthutho",
              "host": "auth",
              "pathPrefix": "/callback"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "permissions": [  
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    
    "web": {
      "favicon": "./assets/images/logo.png",
      "bundler": "metro",
      "output": "single"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      "expo-secure-store",
      "expo-notifications" 
    ],
    
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#1ea2b1",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "New notification from Uthutho"
    },
    
    "experiments": {
      "typedRoutes": true
    },
    
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "2669c125-3910-49ce-a24b-5675a796b3ec"
      }
    },
    
    "splash": {
      "image": "./assets/images/SplashScreen.png",
      "backgroundColor": "#000000"
    },
    
    "owner": "soft-glitch-solution"
  }
}